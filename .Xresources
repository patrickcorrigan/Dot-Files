!-------------------------------------------------------------------------------
! URxvt settings
!-------------------------------------------------------------------------------

URxvt.depth:                32
URxvt.geometry:             127x34
URxvt.transparent:          false
URxvt.fading:               0
URxvt.loginShell:           true
URxvt.saveLines:            50
URxvt.internalBorder:       3
URxvt.lineSpace:            0

! Fonts
URxvt.allow_bold:           true
URxvt.font: xft:Source Code Pro for Powerline:size=11
URxvt.boldFont: xft:Source Code Pro for Powerline:bold:size=11

! Fix font space
URxvt*letterSpace: -1

! Scrollbar
URxvt.scrollStyle:          rxvt
URxvt.scrollBar:            false

! Perl extensions
URxvt.perl-ext-common:      default,matcher
URxvt.matcher.button:       1
URxvt.urlLauncher:          chromium

! Cursor
URxvt.cursorBlink:          true
URxvt.cursorColor:          #657b83
URxvt.cursorUnderline:      false

! Pointer
URxvt.pointerBlank:         true

!-------------------------------------------------------------------------------
! Dzen2
!-------------------------------------------------------------------------------

dzen2.font: xft:Source Code Pro for Powerline:size=10
dzen2.foreground: #000000
dzen2.background: #FFFFFF

!-------------------------------------------------------------------------------
! Colours
!-------------------------------------------------------------------------------

! Base16 Grayscale
! Scheme: Alexandre Gavioli (https://github.com/Alexx2/)

#define base00 #101010
#define base01 #252525
#define base02 #000000
#define base03 #525252
#define base04 #ababab
#define base05 #b9b9b9
